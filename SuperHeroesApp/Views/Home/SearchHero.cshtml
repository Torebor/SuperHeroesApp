@{
    ViewData["Title"] = "Search Hero";
}

<h2>Search Hero by name <a asp-action="Index" class="btn btn-sm btn-primary">Back to homepage</a></h2>
<h3>@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="heroName">Name:</label>
        <input class="form-control" name="heroName" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Hero details</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Search Hero</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Powerstats</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.id</td>
                <td>@Model.name</td> 
            </tr>
        </tbody>
    </table>
}